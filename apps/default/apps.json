    "htmlContent": "<!DOCTYPE html><html lang=\"en\"><head><meta charset=\"UTF-8\"><meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\"><title>Jstore</title><style>body { font-family: Arial, sans-serif; display: flex; flex-direction: column; align-items: center; margin: 0; padding: 0; background-color: #f0f0f0; } #search-bar { margin-top: 20px; padding: 10px; width: 300px; border-radius: 5px; border: 1px solid #ccc; } .app-container { display: flex; flex-wrap: wrap; justify-content: center; margin-top: 20px; } .app { margin: 10px; text-align: center; } .app img { width: 50px; height: 50px; } .app button { margin-top: 5px; padding: 5px 10px; border: none; cursor: pointer; border-radius: 5px; } .install-btn { background-color: #4CAF50; color: white; } .uninstall-btn { background-color: #f44336; color: white; display: none; } </style></head><body><h1>Jstore</h1><input id=\"search-bar\" type=\"text\" placeholder=\"Search for apps...\" /><div class=\"app-container\" id=\"app-container\"></div><script>document.addEventListener('DOMContentLoaded', function() { var apps = []; var filteredApps = []; var appContainer = document.getElementById('app-container'); var searchBar = document.getElementById('search-bar'); function displayApps(appList) { appContainer.innerHTML = ''; if (!appList || appList.length === 0) { appContainer.innerHTML = '<p style=\"color: red;\">No apps found.</p>'; return; } appList.forEach(function(app) { var appElement = document.createElement('div'); appElement.className = 'app'; var appIcon = document.createElement('img'); appIcon.src = app.icon; appIcon.alt = app.name; appElement.appendChild(appIcon); var appName = document.createElement('p'); appName.textContent = app.name; appElement.appendChild(appName); var installButton = document.createElement('button'); installButton.textContent = 'Install'; installButton.className = 'install-btn'; var uninstallButton = document.createElement('button'); uninstallButton.textContent = 'Uninstall'; uninstallButton.className = 'uninstall-btn'; installButton.addEventListener('click', function() { installApp(app.name, app.icon, app.url); installButton.style.display = 'none'; uninstallButton.style.display = 'inline-block'; }); uninstallButton.addEventListener('click', function() { uninstallApp(app.name); installButton.style.display = 'inline-block'; uninstallButton.style.display = 'none'; }); appElement.appendChild(installButton); appElement.appendChild(uninstallButton); appContainer.appendChild(appElement); }); } function filterApps() { var query = searchBar.value.toLowerCase(); filteredApps = apps.filter(function(app) { return app.name.toLowerCase().indexOf(query) !== -1; }); displayApps(filteredApps); } function installApp(name, icon, url) { console.log('Installing ' + name + ' with icon ' + icon + ' and url ' + url); } function uninstallApp(name) { console.log('Uninstalling ' + name); } searchBar.addEventListener('input', filterApps); fetch('https://jxoj.github.io/Jxo-OS/apps/apps.json').then(function(response) { return response.json(); }).then(function(data) { console.log('Fetched apps:', data); apps = data; filteredApps = data; displayApps(filteredApps); }).catch(function(error) { console.error('Error fetching apps:', error); appContainer.innerHTML = '<p style=\"color: red;\">Error loading apps.</p>'; });});</script></body></html>"
